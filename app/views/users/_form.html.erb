<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Nuevo jugador</h6>
  </div>
  <div class="card-body">
    <%= form_with(model: user) do |form| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, 'Nombre:', class: "col-3 control-label left-col" %>
        <div class="col-3 left-col">
          <%= form.text_field :name, id: :name, 
                      class:"form-control ", placeholder: "Ingrese un nombre..." %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :balance, 'Balance:', class: "col-3 control-label left-col" %>
        <div class="col-3 left-col">
          <%= form.number_field :balance, id: :balance, 
                      class:"form-control ", placeholder: "Ingrese un monto..." %>
        </div>
      </div> 

      <div class="actions col-3 left-col">
        <%= form.submit 'Grabar', class:"btn btn-primary send-btn" %>
      </div>
    <% end %>

 
  </div>
</div>





